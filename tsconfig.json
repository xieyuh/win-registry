{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "types": ["node", "mocha"],
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules", "build"],
  "include": ["lib/**/*.ts"]
}